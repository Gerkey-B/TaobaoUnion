<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:my="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    my:cardElevation="4dp"
    my:contentPadding="5dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/on_sell_cover"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/on_sell_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="妇炎洁洗内裤专用内衣洗衣液清洗液女士杀菌抗菌内衣裤除菌抑菌男妇炎洁洗内裤专用内衣洗衣液清洗液女士杀菌抗菌内衣裤除菌抑菌男" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/on_sell_original_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥58.9"
                android:textColor="#D0021B"/>

            <TextView
                android:id="@+id/on_sell_final_prise"
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="券后价：28.8"
                android:textColor="#D0021B" />

        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>